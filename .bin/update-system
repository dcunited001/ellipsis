#!/bin/sh

GREEN='\033[1;32m'
BLUE='\033[1;34m'
NC='\033[0m'

echo
echo -e "${GREEN}Updating ${BLUE}$(hostname)${GREEN}...${NC}"
echo

__substitute_urls=""
__os="$HOME/.dotfiles/dc/systems/$(hostname).scm"
while [ "$1" != "" ]; do
    case $1 in
        --os)
            __os="$2"
            shift 2
            ;;
        --substitute-urls)
            __substitute_urls="$2"
            shift 2
            ;;
        --)
            # shift # send the guix command additional args
            break
            ;;
        -*|--*=) # unsupported flags
        echo "Error: Unsupported flags $1" >&2
        exit 1
        ;;
    esac
done

__ellipsis_channel=$HOME/.dotfiles
__substitute_urls=${__substitute_urls:-https://ci.guix.gnu.org https://bordeaux.guix.gnu.org https://substitutes.nonguix.org}

# not sure on sudo -E, sudo -i or no option
#sudo -i

notify-send "GUIX Update $(hostname)" "Starting update to ${__os}"

sudo -E guix system -L $__ellipsis_channel \
     reconfigure $__os \
     --substitute-urls="$__substitute_urls" \
     $@

if [ $? -eq 0 ]; then
    notify-send -i "${I_SUCCESS:-success}" "GUIX Update $(hostname) failed" "Update to ${__os}"
else
    notify-send -i "${I_ERROR:-error}" "GUIX Update $(hostname) finished" "Update to ${__os}"
fi
