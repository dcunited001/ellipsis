#!/bin/sh

svcName=elephant.service
svcOnlineIcon="ðŸ©¢"  # ðŸ©¢ # red elephant  
svcOfflineIcon="ðŸ©©" # ðŸ©© # black elephant
svcOnlineMsg="<span foreground='green'><sup>$svcOnlineIcon</sup></span>"
svcOfflineMsg="<span foreground='red'><sup>$svcOfflineIcon</sup></span>"

while true; do
  svcOnline="$(systemctl --user is-active $svcName)"
  if [ "$svcOnline" == "active" ]; then
      printf "{\"text\": \"$svcOnlineMsg\"}\n"
  else
      printf "{\"text\": \"$svcOfflineMsg\"}\n"
  fi

  sleep 5
done
