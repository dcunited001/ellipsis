partial modifier_keys
xkb_symbols "sclk_switch" {
  // HP 845 G7: Fn+C
  key <SCLK> {[  ISO_Level3_Shift  ], type[group1]="ONE_LEVEL" };
};

partial modifier_keys
xkb_symbols "display_switch" {
  // HP 845 G7: Fn+F1 (Doesn't work)
